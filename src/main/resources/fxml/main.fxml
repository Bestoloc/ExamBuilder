<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="350.0" prefWidth="600.0" stylesheets="@/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ticketbuilder.controllers.MainController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <center>
              <VBox alignment="CENTER" prefWidth="0.0" spacing="20.0" BorderPane.alignment="CENTER">
                  <Label style="-fx-font-size:18px; -fx-font-weight: bold;" text="Конструктор экзаменационных билетов" />
                  <Label maxWidth="600" text="Преподаватель создаёт вопросы -&gt; распределяет по темам и сложности -&gt; генерирует билеты -&gt; анализирует использование." wrapText="true" />
                  <HBox alignment="CENTER" spacing="20">
                      <Button fx:id="btnCreate" onAction="#onCreate" prefWidth="120" text="Создать" translateX="-20.0" />
                  <Button mnemonicParsing="false" onAction="#onAddQuestion" text="Добавить вопрос" />
                      <Button fx:id="btnAnalysis" onAction="#onAnalysis" prefWidth="120" text="Анализ" translateX="20.0" />
                  </HBox>
              </VBox>
          </center>
          <padding>
              <Insets bottom="20" left="20" right="20" top="20" />
          </padding>
      </BorderPane>
   </children>
</AnchorPane>
