<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="950.0" stylesheets="@/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ticketbuilder.controllers.AnalysisController">
   <children>
      <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="689.0" minWidth="5.0" prefWidth="11.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="689.0" minWidth="10.0" prefWidth="334.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="563.0" minWidth="10.0" prefWidth="488.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="81.0" minWidth="4.0" prefWidth="11.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints maxHeight="62.0" minHeight="10.0" prefHeight="62.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="503.0" minHeight="10.0" prefHeight="482.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="62.0" minHeight="0.0" prefHeight="62.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>

             <TableView fx:id="tableAnalysis" prefWidth="599.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1">
                 <columns>
                     <TableColumn fx:id="colId" prefWidth="31.0" text="ID" />
                     <TableColumn fx:id="colText" minWidth="100.0" prefWidth="272.0" text="Вопрос" />
                  <TableColumn fx:id="colTopic" prefWidth="132.0" text="Тема" />
                  <TableColumn fx:id="colDifficulty" minWidth="100.0" prefWidth="272.0" text="Сложность" />
                     <TableColumn fx:id="colUsage" minWidth="100.0" prefWidth="240.0" text="Использован" />
                     <TableColumn fx:id="colAvg" minWidth="96.0" prefWidth="107.0" text="Средний балл" />
                     <TableColumn fx:id="colComment" minWidth="100.0" prefWidth="197.0" text="Комментарий" />
                 </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
             </TableView>
                 <ComboBox fx:id="cmbStudents" onAction="#onStudentSelected" prefHeight="36.0" prefWidth="214.0" promptText="Выберите ученика" GridPane.columnIndex="1" />
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#onBack" text="Назад" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button mnemonicParsing="false" onAction="#onGlobalAnalysis" text="Общая статистика" GridPane.columnIndex="2" GridPane.halignment="LEFT" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
