<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200.0"  prefWidth="300.0" stylesheets="@/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ticketbuilder.controllers.LoginController">
   <children>
      <VBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      
          <padding>
              <Insets bottom="20" left="20" right="20" top="20" />
          </padding>
      
          <Label style="-fx-font-size:16px; -fx-font-weight:bold" text="Вход преподавателя" />
      
          <TextField fx:id="textLogin" promptText="Логин" />
          <PasswordField fx:id="txtPassword" promptText="Пароль" />
      
          <Button fx:id="btnJoin" onAction="#onLogin" text="Войти" />
      
          <Label fx:id="labelError" textFill="red" />
      
      </VBox>
   </children>
</AnchorPane>
